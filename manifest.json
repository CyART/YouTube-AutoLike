{
	"manifest_version": 2,
	"name": "Auto-Like for YouTubeÂ®",
	"version": "1.0",

	"description": "Autotomatically like your favourite Youtubers without even having to click!",

	"content_scripts": [{
    	"matches": ["*://*.youtube.com/*"],
    	"js": ["js/jquery.js", "js/autolike-cs.js"]
	}],
	"options_page": "options.html",
	"permissions": [
		"storage",
		"*://*.youtube.com/*"
